    <title>Annas Blog</title>
  </head>
  
  <body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container d-flex">
    <a class="navbar-brand ml-3" href="@Umbraco.Content("8b5d4cef-0e95-436b-9af1-92f5c646336d").Url()">Home</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
       <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                Articles
              </a>
              <div class="dropdown-menu" >
                    @{
                	var menu = Umbraco.Content(Guid.Parse("8b5d4cef-0e95-436b-9af1-92f5c646336d"))
                    .Children()
                    .Where(x => x.IsVisible())
                    .OrderBy(x => x.Name);
                }
              
                	@foreach (var item in menu)
                	{
                	
                			<a class="dropdown-item" href="@item.Url()">@item.Name()</a>
                	}
                  
              </div>
             <li class="nav-item">
                 <a class="nav-link" href="@Umbraco.Content("8b623411-9c2b-4522-ae37-a4cc2365810e").Url()">Our Crew</a>
             </li>
             <li class="nav-item">
                <a class="nav-link" href="@Umbraco.Content("65a51453-c8a9-4212-a57b-ba732a096500").Url()">Contact Us</a>
            </li>
            </li>
          </ul>
        </div>
        
      </ul>
    </div>
    <div class="d-flex">
        @Html.Partial("LoginStatusPartial")
      </div>
      @foreach (var (culture, infos) in Model.Cultures)
{
  <ul>
      <li>
        <a href="@Model.Url(culture)">
        @culture.ToString()
        @Umbraco.GetDictionaryValue("Settings/Languages/" + culture)
      </a>
    </li>
  </ul>
}
 
  </div>
      
</nav>

<div class="container d-flex justify-content-between">
    
    <div class="container">
      @RenderBody()
   </div>
    
     <div>
        <h1>Random Article</h1>
        
    <div>
            @{
        var selection = Umbraco.Content(Guid.Parse("8b5d4cef-0e95-436b-9af1-92f5c646336d"))
        .Descendants()
        .Where(x => x.IsVisible() && (x.IsDocumentType("reviewArticle") || x.IsDocumentType("newsArticles") || x.IsDocumentType("gossipArticle")))
        .OrderBy(t => Guid.NewGuid()).Take(3);
            }
    
    
    	@foreach (var item in selection)
        {

    		<h3>@item.Value("titlenumber")</h3>
            @*<div>
                @{ var image = item.Value<IPublishedContent>("icon");
                }
                <img src="@image.Url()" />
            </div>*@
          
    
    	}
    </div>
     
    </div>
    
</div>



  


